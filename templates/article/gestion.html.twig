{% extends 'base.html.twig' %} {% block title %}Gérer les planètes{%
endblock %} {% block body %}
<section class="container">
  <table class="table table-dark m-3">
    <thead>
      <tr>
        <th scope="col">#</th>

        <th scope="col">Titre</th>
        <th scope="col">Categorie</th>
        <th scope="col">Image</th>
        <th scope="col">Supprimer</th>
        <th scope="col">Modifier</th>
      </tr>
    </thead>

    <tbody>
      {% for article in article %}
        <tr>
            <td scop="row">{{ article.id }}</td>
            <td>{{ article.titre }}</td>
            <td>{{ article.categorie }}</td>

            <td>
            <img style="width: 120px; height:120px" src="{{asset('uploads/image/' ~ article.image)}}" />
            </td>

            <td>
                <a 
                    class="btn btn-outline-danger" 
                    href="{{ path('app_article_delete',{id: article.id}) }}" 
                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')"
                    >Supprimer</a
                >
            </td>

            <td>
            <a
                class="btn btn-outline-warning"
                href="{{ path('app_admin_article_edit', { id: article.id }) }}"
                >Modifier</a
            >
            </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock %}